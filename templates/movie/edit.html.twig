{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Edit Movie</h1>
        
<form method="POST">
    <div class="form-group mb-3">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{ movie.title }}" required>
    </div>
    <div class="form-group mb-3">
     <label for="description">Description</label>
    <input id="description" name="description" value="{{ movie.description }}">
    </div>
    <div class="form-group mb-3">
    <label for="imagePath">Image Path</label>
    <input type="text" id="imagePath" name="imagePath" value="{{ movie.imagePath }}">
    </div>
    <div class="form-group mb-3">
    <label for="releaseYear">Release Year</label>
    <input type="number" id="releaseYear" name="releaseYear" value="{{ movie.releaseYear }}">
    </div>
    
    

    <button type="submit" class="btn btn-outline-success">Save Change</button>
</form>

    </div>
    {% endblock %}