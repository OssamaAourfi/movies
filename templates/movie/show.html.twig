{% extends 'base.html.twig' %}
{% block body %}

<div class="card text-center">

    <h1>{{ movie.title }}</h1>

  <div class="card-body">
    <img src="{{movie.imagePath}}" style="width: 31rem;" alt="">
    <p>{{movie.description}}</p>
    <a href="{{ path('edit_movie', { id: movie.id }) }}"class="p-2 bg-warning text-white text-decoration-none">Edit Movie</a>
    <a href="{{path('app_movie')}}" class="ms-5 p-2 bg-secondary text-white text-decoration-none">Go To list Movies</a>
    <a href="{{ path('delete_movie', { id: movie.id }) }}" class="ms-5 p-2 bg-danger text-white text-decoration-none" 
   onclick="return confirm('Are you sure you want to delete this movie?');">Delete</a>

  </div>
  <div class="card-footer text-body-secondary">
    <h2>Film Date: {{movie.releaseYear}}</h2>
  </div>
</div>
{% endblock %}